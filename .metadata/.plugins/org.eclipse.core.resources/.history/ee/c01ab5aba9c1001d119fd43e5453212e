package it.epicode.be;

import java.util.Arrays;

public class Helloworld {

public static void main (String[] args)
		{
		// Stampa a console  la frase
		System.out.println("This is my first Epicode Java Project!");
		
		System.out.println(" \n My First Java Day Homeworks \n");
		
		int a = 10;
		int b = 3;
		int c= a*b;
		System.out.println(a*b);
		System.out.println(c);
		
		int d= 5;
		String myString= "Ciao";
		String myStringConc= d + myString;
		System.out.println(d+myString);
		System.out.println(myStringConc);
		
		
		String[] arrayOfString = {"Hola", "Hello", "Hi", "Buongiorno", "Gutennmorgen"};
		String[] newArrayOfString = new String[arrayOfString.length + 1];

	
		int positionToAdd = 3;
		for (int i = 0, j = 0; i < newArrayOfString.length; i++) {
		    if (i == positionToAdd) {
		        newArrayOfString[i] = "Bonjourno";
		    } else {
		        newArrayOfString[i] = arrayOfString[j];
		        j++;
		    }
		}


		System.out.println(Arrays.toString(newArrayOfString));
		
		
		}
}



